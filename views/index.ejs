<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    html, body { height: 100%; margin: 0; }

    body {
      font-family: system-ui, sans-serif;
      background-color: #f5f5f5;
      color: #232323;
      overflow-x: hidden;
    }

    .page-wrap {
      position: relative;
      z-index: 1;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 1rem;
    }

    /* Main card */
    .welcome-card {
      border: 1px solid rgba(0,0,0,0.06);
      border-radius: 18px;
      background: rgba(255,255,255,0.78);
      backdrop-filter: blur(10px);
      box-shadow:
        0 20px 50px rgba(0,0,0,0.08),
        0 2px 0 rgba(255,255,255,0.6) inset;
      overflow: hidden;
    }

    /* Top accent bar */
    .card-accent {
      height: 10px;
      background: #ffb16e;
    }

    /* Avatar circle */
    .avatar {
      width: 68px;
      height: 68px;
      border-radius: 999px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 1.5rem;
      color: #ff4e00;
      background: linear-gradient(135deg, #ffe7d9, #fff3ea);
      border: 1px solid rgba(0,0,0,0.06);
      box-shadow: none; /* REMOVE glow */
    }

    .role-badge {
      display: inline-flex;
      align-items: center;
      padding: 0.25rem 0.7rem;
      border-radius: 999px;
      font-size: 0.8rem;
      font-weight: 600;
    }

    .role-manager {
      background-color: #ffe7d9;
      color: #312f26;
    }

    .role-user {
      background-color: #e2e3e5;
      color: #383d41;
    }

    /* Buttons */
    .btn-primary {
      background: linear-gradient(135deg, #ff8f4d 0%, #ff6f2f 100%);
      border: none;
      border-radius: 12px;
      padding: .9rem 1rem;
      font-weight: 500;
      box-shadow: 0 12px 24px rgba(255,127,63,0.22);
    }

    .btn-primary:active { transform: translateY(0px); }

    .btn-secondary {
      background: #f3f4f6;
      color: #202020;
      border: 1px solid rgba(0,0,0,0.08);
      border-radius: 12px;
      padding: .9rem 1rem;
      font-weight: 500;
    }
    /* Primary */
    .btn-primary:hover {
      background-color: #ff7a33;
      border-color: #ff7a33;
      transform: translateY(-2px);
      box-shadow: 0 4px 10px rgba(255, 78, 0, 0.25);
    }

    /* Secondary */
    .btn-secondary:hover {
      background-color: #eef0f3;
      transform: translateY(-2px);
      color: #202020; /* keep text dark */
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }


    .btn-outline-secondary {
      border-radius: 999px;
    }

    /* Quick actions tiles */
    .quick-actions {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: .75rem;
      margin-bottom: 1.25rem;
    }
    .qa-tile {
      border-radius: 14px;
      border: 1px solid rgba(0,0,0,0.06);
      background: rgba(255,255,255,0.7);
      padding: .9rem .9rem;
      text-align: left;
      transition: transform .12s ease, box-shadow .12s ease;
    }
    .qa-tile:hover {
      transform: translateY(-2px);
      box-shadow: 0 14px 28px rgba(0,0,0,0.08);
    }
    .qa-title {
      font-weight: 700;
      font-size: .95rem;
      margin: 0 0 .2rem 0;
    }
    .qa-sub {
      margin: 0;
      font-size: .82rem;
      color: rgba(0,0,0,0.6);
    }
    .qa-icon {
      width: 34px; height: 34px;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: .55rem;
      border: 1px solid rgba(0,0,0,0.06);
      background: linear-gradient(135deg, #fff3ea, #ffe1cf);
      color: #ff6f2f;
      font-weight: 700;
    }

    /* Make quick actions stack nicely on small screens */
    @media (max-width: 575.98px) {
      .quick-actions { grid-template-columns: 1fr; }
    }
  </style>
</head>

<body>
  <div class="bg-blob blob-1"></div>
  <div class="bg-blob blob-2"></div>

  <div class="page-wrap">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">

          <div class="card welcome-card">
            <div class="card-accent"></div>

            <div class="card-body text-center p-4 p-md-5">
              <div class="mx-auto mb-3 avatar">
                <%= firstName ? firstName[0].toUpperCase() : 'U' %>
              </div>

              <h2 class="mb-1" style="font-weight: 700;">
                Welcome back, <%= firstName %>!
              </h2>

              <p class="text-muted mb-3">
                Choose what you want to manage today.
              </p>

              <% if (typeof error_message !== 'undefined' && error_message) { %>
                <div class="alert alert-danger mt-2" role="alert">
                  <%= error_message %>
                </div>
              <% } %>

              <div class="mb-3">
                <% if (level === 'M') { %>
                  <span class="role-badge role-manager">Manager</span>
                <% } else if (level === 'U') { %>
                  <span class="role-badge role-user">User</span>
                <% } %>
              </div>

              

              <!-- Primary action -->
              <form action="/displayDeposits" method="GET" class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                  View Deposits
                </button>
              </form>

              <% if (level === 'M') { %>
                <form action="/importCSV/" method="GET" class="d-grid mb-3">
                  <button type="submit" class="btn btn-secondary btn-lg">
                    Import CSVs (Coming Soon)
                  </button>
                </form>

                <form action="/displayUsers/" method="GET" class="d-grid mb-3">
                  <button type="submit" class="btn btn-secondary btn-lg">
                    Edit Users
                  </button>
                </form>
              <% } %>

              <div class="mt-2">
                <a href="/logout" class="btn btn-outline-secondary btn-sm">
                  Logout
                </a>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</body>
</html>
